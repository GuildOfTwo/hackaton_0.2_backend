// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int           @id @default(autoincrement())
  lastName    String
  firstName   String
  middleName  String?
  email       String        @unique
  password    String
  firstSignIn Boolean
  birthday    DateTime?
  avatar      String?
  department  String?
  post        String?
  phone       String?
  mentor      String?
  mentor_tg   String?
  roles       String[]
  accessRoles String[]
  UserAwards  UserAwards[]
  UserCourses UserCourses[]

  @@index([email])
  @@map("users")
}

model Awards {
  id         Int          @id @default(autoincrement())
  name       String
  image      String
  UserAwards UserAwards[]

  @@map("awards")
}

model UserAwards {
  id      Int    @id @default(autoincrement())
  awardId Int
  award   Awards @relation(fields: [awardId], references: [id], onDelete: Cascade)
  userId  Int
  user    Users  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_awards")
}

model CoursesCategory {
  id      Int       @id @default(autoincrement())
  name    String
  Courses Courses[]

  @@map("courses_category")
}

model CourseContent {
  id       Int     @id @default(autoincrement())
  image    String
  content  String
  courseId Int
  course   Courses @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("course_content")
}

model Courses {
  id             Int             @id @default(autoincrement())
  courseName     String
  categoryId     Int
  category       CoursesCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  courseDuration Int
  UserCourses    UserCourses[]
  CourseContent  CourseContent[]

  @@map("courses")
}

model UserCourses {
  id        Int      @id @default(autoincrement())
  courseId  Int
  course    Courses  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  startDate DateTime
  doneDate  DateTime
  required  Boolean
  done      Boolean
  userId    Int
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_courses")
}
